<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.vlingo.xoom.examples</groupId>
  <artifactId>petclinic</artifactId>
  <version>1.0.0</version>
  <properties>
    <jdk.version>1.8</jdk.version>
    <maven.compiler.target>${jdk.version}</maven.compiler.target>
    <maven.compiler.source>${jdk.version}</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <exec.mainClass>io.vlingo.xoom.examples.petclinic.infrastructure.XoomInitializer</exec.mainClass>
    <maven-surefire-plugin.version>2.22.2</maven-surefire-plugin.version>
    <maven-failsafe-plugin.version>2.22.2</maven-failsafe-plugin.version>
    <vlingo.xoom.version>1.8.1-SNAPSHOT</vlingo.xoom.version>
  </properties>
  <repositories>
    <repository>
      <id>ossrh-snapshots</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
      <releases><enabled>false</enabled></releases>
      <snapshots><enabled>true</enabled></snapshots>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>ossrh-snapshots</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
      <releases><enabled>false</enabled></releases>
      <snapshots><enabled>true</enabled></snapshots>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>io.vlingo.xoom</groupId>
      <artifactId>xoom-turbo</artifactId>
      <version>${vlingo.xoom.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>io.vlingo.xoom</groupId>
      <artifactId>xoom-build-plugins</artifactId>
      <version>${vlingo.xoom.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.6.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.6.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.rest-assured</groupId>
      <artifactId>rest-assured</artifactId>
      <version>4.3.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>io.vlingo.xoom</groupId>
        <artifactId>xoom-build-plugins</artifactId>
        <version>${vlingo.xoom.version}</version>
        <executions>
          <execution>
            <id>push</id>
            <phase>install</phase>
            <goals>
              <goal>push-schema</goal>
            </goals>
            <configuration>
              <srcDirectory>src/main/xoom/schemata</srcDirectory>
              <schemataService>
                <url>http://localhost:9019</url>
                <clientOrganization>xoom</clientOrganization>
                <clientUnit>apps</clientUnit>
                <hierarchicalCascade>true</hierarchicalCascade>
              </schemataService>
              <schemata>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:Specialty:1.0.0</ref>
                  <src>Specialty.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:PostalAddress:1.0.0</ref>
                  <src>PostalAddress.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:Owner:1.0.0</ref>
                  <src>Owner.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:Telephone:1.0.0</ref>
                  <src>Telephone.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:FullName:1.0.0</ref>
                  <src>FullName.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:Kind:1.0.0</ref>
                  <src>Kind.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:ContactInformation:1.0.0</ref>
                  <src>ContactInformation.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:Date:1.0.0</ref>
                  <src>Date.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:Name:1.0.0</ref>
                  <src>Name.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:AnimalTypeTreatmentOffered:1.0.0</ref>
                  <src>AnimalTypeTreatmentOffered.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:AnimalTypeRenamed:1.0.0</ref>
                  <src>AnimalTypeRenamed.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:SpecialtyTypeOffered:1.0.0</ref>
                  <src>SpecialtyTypeOffered.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:SpecialtyTypeRenamed:1.0.0</ref>
                  <src>SpecialtyTypeRenamed.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:ClientRegistered:1.0.0</ref>
                  <src>ClientRegistered.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:ClientNameChanged:1.0.0</ref>
                  <src>ClientNameChanged.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:ClientContactInformationChanged:1.0.0</ref>
                  <src>ClientContactInformationChanged.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:VeterinarianRegistered:1.0.0</ref>
                  <src>VeterinarianRegistered.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:VeterinarianContactInformationChanged:1.0.0</ref>
                  <src>VeterinarianContactInformationChanged.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:VeterinarianNameChanged:1.0.0</ref>
                  <src>VeterinarianNameChanged.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:VeterinarianSpecialtyChosen:1.0.0</ref>
                  <src>VeterinarianSpecialtyChosen.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:PetRegistered:1.0.0</ref>
                  <src>PetRegistered.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:PetNameChanged:1.0.0</ref>
                  <src>PetNameChanged.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:PetBirthRecorded:1.0.0</ref>
                  <src>PetBirthRecorded.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:PetDeathRecorded:1.0.0</ref>
                  <src>PetDeathRecorded.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:PetKindCorrected:1.0.0</ref>
                  <src>PetKindCorrected.vss</src>
                </schema>
                <schema>
                  <ref>xoom:apps:io.vlingo.xoom.examples.petclinic:PetOwnerChanged:1.0.0</ref>
                  <src>PetOwnerChanged.vss</src>
                </schema>
              </schemata>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>${exec.mainClass}</mainClass>
                </transformer>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
                <transformer implementation="org.apache.maven.plugins.shade.resource.DontIncludeResourceTransformer">
                  <resource>.SF</resource>
                </transformer>
                <transformer implementation="org.apache.maven.plugins.shade.resource.DontIncludeResourceTransformer">
                  <resource>.DSA</resource>
                </transformer>
                <transformer implementation="org.apache.maven.plugins.shade.resource.DontIncludeResourceTransformer">
                  <resource>.RSA</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>-classpath</argument>
            <classpath />
            <argument>-noverify</argument>
            <argument>-XX:TieredStopAtLevel=1</argument>
            <argument>-Dcom.sun.management.jmxremote</argument>
            <argument>${exec.mainClass}</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>${maven-surefire-plugin.version}</version>
          <configuration>
            <detail>true</detail>
            <includes>
              <include>%regex[.*]</include>
            </includes>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-failsafe-plugin</artifactId>
          <version>${maven-failsafe-plugin.version}</version>
          <executions>
            <execution>
              <goals>
                <goal>integration-test</goal>
                <goal>verify</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.7.0</version>
          <configuration>
            <compilerArgs>
              <arg>-parameters</arg>
            </compilerArgs>
            <annotationProcessorPaths>
              <path>
                <groupId>io.vlingo.xoom</groupId>
                <artifactId>xoom-turbo</artifactId>
                <version>${vlingo.xoom.version}</version>
              </path>
            </annotationProcessorPaths>
          </configuration>
          <executions>
            <execution>
              <id>test-compile</id>
              <goals>
                <goal>testCompile</goal>
              </goals>
              <configuration>
                <compilerArgs>
                  <arg>-parameters</arg>
                </compilerArgs>
                <annotationProcessorPaths>
                  <path>
                    <groupId>io.vlingo.xoom</groupId>
                    <artifactId>xoom-turbo</artifactId>
                    <version>${vlingo.xoom.version}</version>
                  </path>
                </annotationProcessorPaths>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
